{
  "name": "jpy-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "JPY SDK Monorepo - 跨平台中间件 SDK",
  "scripts": {
    "dev": "pnpm --filter ./apps dev",
    "build": "pnpm --filter ./packages/jpy-sdk build",
    "build:all": "pnpm -r build",
    "dev:app": "pnpm --filter ./apps dev",
    "dev:sdk": "echo 'SDK 是纯 TypeScript，无需单独开发服务器'",
    "clean": "pnpm -r exec rm -rf node_modules dist .vite",
    "lint": "pnpm -r lint",
    "list": "pnpm list -r --depth=0",
    "push:sdk": "git subtree push --prefix packages/jpy-sdk origin sdk"
  },
  "keywords": [
    "monorepo",
    "pnpm",
    "workspace",
    "sdk",
    "middleware"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
